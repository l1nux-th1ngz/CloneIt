#!/bin/bash

# Function to clone GitHub repositories
clone_github_repositories() {
    access_token="$1"
    repositories=("your_github_repo1" "your_github_repo2" "your_github_repo3")

    for repo in "${repositories[@]}"; do
        git clone --quiet "https://$access_token@github.com/your_username/$repo.git"
    done
}

# Get GitHub credentials
github_username=$(whiptail --inputbox "Enter your GitHub username:" 10 60 --title "GitHub Login" 3>&1 1>&2 2>&3)
github_token=$(whiptail --passwordbox "Enter your GitHub personal access token:" 10 60 --title "GitHub Login" 3>&1 1>&2 2>&3)

# Clone GitHub repositories
clone_github_repositories "$github_token"

# Display success message
whiptail --msgbox "GitHub repositories cloned successfully." 10 60 --title "Success"
