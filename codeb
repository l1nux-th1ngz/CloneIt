#!/bin/bash

# Function to clone Codeberg repositories
clone_codeberg_repositories() {
    access_token="$1"
    repositories=("your_codeberg_repo1" "your_codeberg_repo2" "your_codeberg_repo3")

    for repo in "${repositories[@]}"; do
        git clone --quiet "https://$access_token@codeberg.org/your_username/$repo.git"
    done
}

# Get Codeberg credentials
codeberg_username=$(whiptail --inputbox "Enter your Codeberg username:" 10 60 --title "Codeberg Login" 3>&1 1>&2 2>&3)
codeberg_token=$(whiptail --passwordbox "Enter your Codeberg personal access token:" 10 60 --title "Codeberg Login" 3>&1 1>&2 2>&3)

# Clone Codeberg repositories
clone_codeberg_repositories "$codeberg_token"

# Display success message
whiptail --msgbox "Codeberg repositories cloned successfully." 10 60 --title "Success"
