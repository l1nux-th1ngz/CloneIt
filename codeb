#!/bin/bash

# Configuration file
config_file="$HOME/.codeberg_download_config"

# Read the last used directory and Codeberg credentials from the config file
if [ -f "$config_file" ]; then
    source "$config_file"
else
    # Set default values if the config file doesn't exist
    last_used_directory="$HOME"
    codeberg_username=""
    codeberg_token=""
fi

# Function to prompt for Codeberg credentials and download directory
get_credentials_and_directory() {
    codeberg_username=$(zenity --entry --title="Codeberg Credentials" --text="Enter your Codeberg username:" --entry-text="$codeberg_username")
    codeberg_token=$(zenity --password --title="Codeberg Credentials" --text="Enter your Codeberg personal access token:" --entry-text="$codeberg_token")
    last_used_directory=$(zenity --file-selection --directory --title="Select Download Directory" --filename="$last_used_directory")
    
    # Save the configuration to the file
    echo "last_used_directory=\"$last_used_directory\"" > "$config_file"
    echo "codeberg_username=\"$codeberg_username\"" >> "$config_file"
    echo "codeberg_token=\"$codeberg_token\"" >> "$config_file"
}

# If either Codeberg username or token is empty, prompt for credentials
if [ -z "$codeberg_username" ] || [ -z "$codeberg_token" ]; then
    get_credentials_and_directory
fi

# Replace placeholders with the obtained credentials and directory
codeberg_repositories=("your_repository1_here" "your_repository2_here" "your_repository3_here")

# Clone repositories in the background
for repo in "${codeberg_repositories[@]}"; do
    git clone --quiet "https://$codeberg_token@codeberg.org/$codeberg_username/$repo.git" "$last_used_directory/$repo" &
done

# Wait for all background jobs to finish
wait

# Keep the script running until manually closed
zenity --info --title="Download Complete" --text="Downloads have finished. You can close this window when ready."
sleep infinity
