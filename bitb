#!/bin/bash

# Function to clone Bitbucket repositories
clone_bitbucket_repositories() {
    access_token="$1"
    repositories=("your_bitbucket_repo1" "your_bitbucket_repo2" "your_bitbucket_repo3")

    for repo in "${repositories[@]}"; do
        git clone --quiet "https://your_username:$access_token@bitbucket.org/your_username/$repo.git"
    done
}

# Get Bitbucket credentials
bitbucket_username=$(whiptail --inputbox "Enter your Bitbucket username:" 10 60 --title "Bitbucket Login" 3>&1 1>&2 2>&3)
bitbucket_token=$(whiptail --passwordbox "Enter your Bitbucket app password:" 10 60 --title "Bitbucket Login" 3>&1 1>&2 2>&3)

# Clone Bitbucket repositories
clone_bitbucket_repositories "$bitbucket_token"

# Display success message
whiptail --msgbox "Bitbucket repositories cloned successfully." 10 60 --title "Success"
